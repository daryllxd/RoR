<p id="notice"><%= notice %></p>

<h1>Hosts</h1>
<div class="row">
  <div class="col-md-5">
<table class="table table-striped">
 <thead>
   <tr>
     <th>Name</th>
     <th>Email</th>
     <th>Location</th>
     <th>Image</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @hosts.each do |host| %>
     <tr>
       <td><%= host.last_name %> <%= host.first_name %></td>
       <td><%= host.email %></td>
       <td><%= host.location %></td>
       <td><img src="<%= host.image_url %>" /></td>
     </tr>
   <% end %>
 </tbody>
</table>
</div>
</div>

<br>

<%= paginate @hosts %>
