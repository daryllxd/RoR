<!DOCTYPE html>
<html>
  <head>
    <title>Airbnb</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if !host_signed_in? %>
      <p class="sign_in"><%= link_to "Login", hosts_path %> </p>
      <%= link_to "Login with Facebook", "/auth/facebook", id: "log_in" %>
    <% end %>

    <% if host_signed_in? %>
      <div class="buttons">
        <button class="button"><%= link_to('Logout', destroy_host_session_path, :method => :delete) %></button>
      </div>
    <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
