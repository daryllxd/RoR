<p id="notice"><%= notice %></p>

<h1>Hosts</h1>
<div class="row">
  <div class="col-md-5">
<table class="table table-striped">
 <thead>
   <tr>
     <th>Name</th>
     <th>Location</th>
     <th>Description</th>
     <th>Status</th>
     <th>Owner</th>
     <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @accomodations.each do |accomodation| %>
     <tr>
       <td><%= accomodation.name %></td>
       <td><%= accomodation.location %></td>
       <td><%= accomodation.description %></td>
       <td><%= accomodation.status %></td>
       <td><%= accomodation.host.email%></td>
     </tr>
   <% end %>
 </tbody>
</table>
</div>
</div>

<br>

<%= paginate @accomodations %>
